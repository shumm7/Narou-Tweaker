{
  "name": "Narou Tweaker",
  "description": "Inprove experience of syosetu.com",
  "default_locale": "en",
  "version": "0.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
		"page": "cogs/options/options.html"
	},
  "action": {
    "default_popup": "cogs/options/options.html"
  },
  "content_scripts": [
    {
      "js": [
        "libs/jquery-3.7.1.min.js",
        "libs/chart.min.js",
        "libs/jquery-nstslider/dist/jquery.nstSlider.min.js",
        "cogs/kasasagi/loader.js"
      ],
      "css": [
        "libs/font-awesome/css/all.css",
        "common.css",
        "libs/jquery-nstslider/dist/jquery.nstSlider.min.css",
        "cogs/kasasagi/kasasagi.css"
      ],
      "matches": [
				"https://kasasagi.hinaproject.com/*"
			]
    },
    {
      "js": [
        "libs/jquery-3.7.1.min.js",
        "cogs/mypage/loader.js"
      ],
      "css": [
        "common.css",
        "cogs/mypage/mypage.css"
      ],
      "matches": [
				"https://mypage.syosetu.com/*",
        "https://api.syosetu.com/*"
			]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "cogs/kasasagi/kasasagi.js"
      ],
      "matches": [
        "https://kasasagi.hinaproject.com/*"
      ]
    },
    {
        "resources": [
          "cogs/mypage/mypage.js"
        ],
        "matches": [
          "https://mypage.syosetu.com/*",
          "https://api.syosetu.com/*"
        ]
    },
    {
      "resources": [
        "utils/text.js",
        "utils/api.js",
        "utils/ui.js"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "resources": [
        "/libs/font-awesome/webfonts/*.ttf",
        "/libs/font-awesome/webfonts/*.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://syosetu.com/*",
    "https://mypage.syosetu.com/*",
    "https://kasasagi.hinaproject.com/*"
  ]
}
